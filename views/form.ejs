  <form action="/newartist" method="POST">
    <div class="banner">
      <h1>Artist Data Form</h1>
    </div>
    <p>Please fill out with the information that is requested below and submit the form. Thank you!</p>
    <hr/>
    <fieldset>
      
    <legend>Artist Information</legend>
    <div class="item">
    <label for="name">Name<span>*</span></label>
    <div class="name-item">
    <input id="name" type="text" name="name" placeholder="First" required/>
    <input id="name" type="text" name="surname" placeholder="Last" required/>
    </div>
    </div>
    <div class="item">
      <label for="phone">Phone<span>*</span></label>
      <div class="name-item">
      <input id="phone" type="text" name="phone" placeholder="For call" required/>
      <input id="phone" type="text" name="app" placeholder="For What's app" />
      </div>
      </div>
    <div class="item">
    <label for="email">Email<span>*</span></label>
    <input id="email" type="text" name="email" required/>
    </div>
    <div class="item">
    <label for="position">Stage Name<span>*</span></label>
    <input id="position" type="text" name="stagename" required />
    </div>
    <div class="item">
      <label for="province">Choose your province from the list:<span>*</span></label>
      <select  name="province" id="province" required>
      
        <option selected value="" disabled selected >Province</option>
        <option value="Mashonaland">Mashonaland</option>
        <option value="Matebeland South">Matebeland South</option>
        <option value="Matebeland North">Matebeland North</option>
        <option value="Harare">Harare</option>
        <option value="Bulawayo">Bulawayo</option>
        <option value="Midlands">Midlands</option>
        <option value="Manicaland">Manicaland</option>
       
      </select>
      </div>
      <div class="item">
        <label for="Categories">Choose your category from the list:<span>*</span></label>
        <select list="category" name="category" id="categories" required>
        
         <option selected value="" disabled selected >Category</option>
          <option value="Spoken Word">Spoken Word</option>
          <option value="Dance Choreographers">Dance Choreographers</option>
          <option value="Dancers">Dancers</option>
          <option value="Dance groups/ Ensembles">Dance groups/ Ensembles</option>
          <option value="Visual Arts">Visual Arts</option>
          <option value="Literary">Literary</option>
          <option value="Theatre">Theatre</option>
          <option value="Film and Television">Film and Television</option>
          <option value="Music">Music</option>
        </select>
        </div>
        
        <div class="item">
          
          <label for="genres">Choose your genre from the list:<span>*</span></label>
          <select list=" " name="genre" id="genres"></select>
          <option selected value="" disabled selected >Genre</option>
        </div>
        <div class="item">
          <input id="language" type="hidden" name="language" placeholder="Language of literature"  required/>
        </div>
    <div class="item">
        <label for="address">Profile<span>*</span></label>
        <input id="address" type="text" name="address" placeholder="Profile" required/>
      </div>
      <legend>Social handles</legend>
      <div class="item">
        <label for="handle">Optional</label>
        <div class="name-item">
        <input id="handle" type="text" name="twitter" placeholder="Twitter Url" />
        <input id="handle" type="text" name="facebook" placeholder="Facebook Url" required/>
        <input id="handle" type="text" name="instagram" placeholder="Instagram Url" required/>
        </div>
        </div>
    <fieldset>
    <div class="btn-block">
    <button type="submit" >Submit</button>
    </div>
  </form>
  </div>
</div>
    
    
   

